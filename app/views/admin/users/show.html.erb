<h1><%= @user.name %>のタスク一覧</h1>
<table class='table'>
  <tr>
    <th><%= t('tasks.title') %></th>
    <th><%= t('tasks.content') %></th>
    <th><%= t('tasks.expired_at') %></th>
    <th><%= t('tasks.status') %></th>
    <th><%= t('tasks.priority') %></th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title%></td>
      <td><%= task.content %></td>
      <td><%= task.expired_at.strftime('%Y/%m/%d') %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
    </tr>
  <% end %>
</table>
<%= link_to "ユーザー一覧へ" , admin_users_path, class:"edit btn btn-outline-primary btn-sm" %>